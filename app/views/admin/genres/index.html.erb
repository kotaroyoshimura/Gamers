<p id="notice"></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 mb-5 mt-2">
      <h3>ジャンル管理画面</h3>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-11">
      <h4>新規ジャンル作成</h4>
      <%= form_with model:@genre, url:admin_genres_path,local:true do |f| %>
      <table class="table table-borderless">
        <tr>
          <td width="10%"><%= f.text_field:name %></td>
          <td width="90%"><%= f.submit "追加" %></td>
        </tr>
      </table>
      <% end %>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-3">
      <h4>ジャンル一覧</h4>
      <table class="table">
        <tbody>
          <% @all_genre.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集",edit_admin_genre_path(genre),class:'btn btn-success' %></td>
            <td><%= link_to "削除",admin_genres_path(genre),method: :delete, "data-confirm" => "削除しますか？",class:'btn btn-danger' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-6"></div>
  </div>
</div>