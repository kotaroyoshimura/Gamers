<p id="notice"></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h3>ジャンル名編集</h3>
    </div>
    <div class="col-md-3">
      <table class="table table-borderless">
        <tbody>
          <%= form_with model:@genre,local:true do |f| %>
          <tr>
            <td><%= f.text_field:name,autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.submit "更新",class:'btn btn-success' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>